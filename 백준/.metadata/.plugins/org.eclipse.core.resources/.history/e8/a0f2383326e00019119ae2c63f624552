	int max =0 ;
	public static void main(String[] args) {
		int n;
		Επ»η app = new Επ»η();
		Scanner sc = new Scanner(System.in);		
//		n = sc.nextInt();
		n=7;
		app.chk = new int[n];
//		int [] t = new int[n];
