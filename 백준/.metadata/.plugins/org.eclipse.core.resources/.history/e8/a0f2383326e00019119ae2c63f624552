private  int bfs(int [] t,int [] p,int start,int n,int val ) {
	if(start+t[start]>=n) {
		System.out.println("dq");
		return val;
	}
		
	else {
		
		int temp = bfs(t,p,start+t[start],n,val+p[start]);
		System.out.println(max);
		if(temp>max) max = temp;
	
		
	 return max;
	}		
}

